@model Authorization_Server.Models.Operation
@{
    ViewData["Title"] = "Delete Operation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div id="home-firstdiv">
        <div class="panel panel-default">
            <div class="panel-heading">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Endpoints" asp-action="Index">Endpoints</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Resources" asp-action="Index" asp-route-id="@Model.Resource.EndpointID"> @Model.Resource.Endpoint.Name</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-route-id="@Model.ResourceID"> @Model.Resource.Name</a></li>
                    <li class="breadcrumb-item active">Delete operation</li>
                </ol>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col">
                        <div class="alert alert-danger" role="alert">
                            <h4 class="alert-heading">Warning</h4>
                            <p>Deleted operations cannot be recoverd.</p>
                            <hr>
                            <p class="mb-0">Are you sure you want to perform this action?</p>
                            <form asp-action="Delete">
                                <a class="btn btn-link" asp-action="Index" asp-route-id="@Model.ResourceID" role="button">Cancel</a>
                                <input type="submit" value="Yes, delete" class="btn btn-danger" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
