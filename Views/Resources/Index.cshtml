@model IEnumerable<Authorization_Server.Models.Resource>

@{
    ViewData["Title"] = "Resources";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <div id="home-firstdiv">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Endpoints" asp-action="Index">Endpoints</a></li>
                        <li class="breadcrumb-item active"> @ViewData["EndpointName"]</li>
                    </ol>
                </div>
                <div class="panel-body">
                    <div class="btn-toolbar" role="toolbar" aria-label="...">
                        <a class="btn" asp-action="Create" asp-route-id="@ViewContext.RouteData.Values["id"]">
                            <img src="~/img/add.svg" alt="Add"><br />Add
                        </a>
                    </div>
                    <table class="table table-striped panel">
                        <thead>
                            <tr>
                                <th style="width: 70%" scope="col">Resources</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>
                                        <a asp-action="Index" asp-controller="Operations" asp-route-id="@item.ID" class="btn">
                                            <img src="~/img/public.svg" alt="URLs" title="URLs"><br />
                                            <small>Operations</small>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn">
                                            <img src="~/img/edit.svg" alt="edit" title="Edit"><br />
                                            <small>Edit</small>
                                        </a>
                                        <a class="btn" asp-action="Delete" asp-route-id="@item.ID">
                                            <img src="~/img/delete.svg" alt="key" title="Delete"><br />
                                            <small>Delete</small>
                                        </a>
                                    </td>
                                </tr>
                            }
                    </table>
                </div>
            </div>

        </div>
    </div>
