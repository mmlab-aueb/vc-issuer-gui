@model Authorization_Server.Models.Resource

@{
    ViewData["Title"] = "Edit Resource";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div id="home-firstdiv">
        <div class="panel panel-default">
            <div class="panel-heading">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Endpoints" asp-action="Index">Endpoints</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-route-id="@Model.EndpointID"> @Model.Endpoint.Name</a></li>
                    <li class="breadcrumb-item active">Edit resource</li>
                </ol>
            </div>
            <div class="panel-body">

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label asp-for="URI" class="control-label"></label><br />
                        <small>(The id will be included in the access token)</small>
                        <input asp-for="URI" class="form-control" />
                        <span asp-validation-for="URI" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a class="btn btn-link" asp-action="Index" asp-route-id="@Model.EndpointID" role="button">Cancel</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

